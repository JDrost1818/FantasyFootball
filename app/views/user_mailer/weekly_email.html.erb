  	<div width="100%" class="scoreboard" style="margin-top: 50px;">
	    <tr>
	      <th align="left">
	      	<%= @game.get_score_for_one @other_team %></th>
	      <th align="left">
	      	<%= @other_team.name %></th>
	    </tr>
	</div>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Pos</th>
	      <th style="text-align:center">Player, NFL Team</th>
	      <th style="text-align:center">Points</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% player_list = @other_team.get_formatted_player_list %>
	    <% player_list.each do |player| %>
		    <tr>
			    <% if player.instance_of? Player then %>    	
			    	<td><%= player.position %></td>
				    <td align="middle"><%= player.get_current_week_stat_for(@other_team) %></td>
			    <% else %>

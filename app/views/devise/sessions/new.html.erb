<!-- Manages the main image banner on homescreen -->
<% banner_pics = Dir.glob("#{Rails.root}/app/assets/images/home_banner/*") %>
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="6500" data-pause="">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% banner_pics.length.times do |num| %>
      <li data-target="#carousel-example-generic" data-slide-to=<%= num %> <%= if num == 0 then "class=active" end%></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner picture_banner" role="listbox">
    <% lead_photo = banner_pics.shift %>
    <div class="item active">
      <img src=<%= "/assets/home_banner/#{lead_photo.split('/').last}" %>/>
    </div>

    <%  banner_pics.each do |file_name| %>
      <% img_src = file_name.split('/').last %>
      <div class="item">
        <img src=<%= "/assets/home_banner/#{img_src}" %>/>
      </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="custom-table">
    <div class="form-group">
      <%= f.label :email, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :email, placeholder: "Email", :class => 'text_field form-control two_hund v-space' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "Password   ", :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.password_field :password, placeholder: "Password", :class => 'text_field form-control two_hund v-space' %>
      </div>
    </div>

    <div class="form-group"  align="left">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit "Log In", :class => 'btn btn-primary btn-lg two_hund' %>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        <div style="margin-left:5px">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

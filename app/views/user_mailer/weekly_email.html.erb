<% @other_team = @game.get_other_team @team %>
<div>
	<table class="scoreboard">
		<h2><%= "Week #{@game.week} - #{@team.get_win_loss_message}" %></h2>
	</table>

  <div id='parent_div_1'>
  	<div width="100%" class="scoreboard">
	  	<tr>
		    <th align="left">
		      	<%= @game.get_score_for_one @team %></th>
		    <th align="left">
		      	<%= @team.name %></th>
		</tr>
	</div>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Pos</th>
	      <th style="text-align:center">Player, NFL Team</th>
	      <th style="text-align:center">Points</th>
	    </tr>
	  </thead>

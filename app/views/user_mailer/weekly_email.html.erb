	    <tr>
	    	<td>QB</td>
		    <% if player_list[0].instance_of? Player then %>
		    	<% @player = player_list[0] %>
		    	<td><%= link_to @player.full_name, player_path(@player) %><%= ", #{@player.nfl_team}"%></td>
			    <td align="middle"><%= @player.get_current_week_stat_for(@team) %></td>
		    <% else %>
		    	<td>Empty</td>
		    	<td align="center">0</td>
		    <% end %>
		</tr>


<%= form_for @player, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :first_name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :last_name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :position, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :position, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :salary, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :salary, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :team_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :team_id, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  players_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

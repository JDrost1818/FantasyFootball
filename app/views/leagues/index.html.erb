<%- model_class = League -%>
<div class="jumbotron trans-color">
  <h1 align="center"><%=t '.title', :default => "Open Leagues" %></h1>
  <p align="center">To get started, choose a league to join and create a team. you will be playing in no time. If none fit your fancy, simply create a new one!</p>
  <p align="center"><a class="btn btn-success btn-lg" href="/leagues/new">Create League</a>
</div>
<table class="table table-striped custom-table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:salary_cap) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @leagues.each do |league| %>
        <% if league.is_open_for_registration then %>
          <tr>
            <td><%= league.name %></td>
            <td><%= league.description %></td>
            <td><%= league.salary_cap %></td>
            <td>
              <%= link_to league_path(league), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                <%= glyph 'info-sign' %>
              <%- end -%>
              <%= link_to edit_league_path(league), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
                <%= glyph 'pencil' %>
              <%- end -%>
              <%= link_to league_path(league), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                <%= glyph 'remove' %>
              <%- end -%>
            </td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>